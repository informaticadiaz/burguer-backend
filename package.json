{
  "name": "restaurant-menu-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for restaurant menu management system",
  "license": "MIT",
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "main": "dist/app.js",
   "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias && cp -r src/prisma dist/ && cp package.json dist/",
    "start": "node dist/app.js",
    "postbuild": "cp package.json dist/",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.1",
    "sharp": "^0.33.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "prisma": "^5.10.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.19.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "resolutions": {
    "glob": "^9.0.0",
    "rimraf": "^4.0.0"
  }
}