# Servidor
PORT=3000
NODE_ENV=development

# Base de datos
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# CORS
CORS_ORIGIN="http://localhost:3000"

# JWT y Autenticación
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Gestión de imágenes
UPLOADS_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB en bytes
IMAGE_QUALITY=80
THUMBNAIL_WIDTH=200
THUMBNAIL_HEIGHT=200
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
IMAGE_STORAGE_PATH=/path/to/image/storage

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_FORMAT=json

# Límites de API
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Seguridad
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password
ADMIN_DEFAULT_ROLE=admin

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/path/to/backups

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Comentarios adicionales
# - Reemplaza todos los valores sensibles en el archivo .env real
# - Asegúrate de que las rutas de archivos sean accesibles
# - Ajusta los límites según las necesidades de tu aplicación
# - En producción, usa valores más restrictivos para seguridad